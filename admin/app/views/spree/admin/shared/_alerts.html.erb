<%= turbo_frame_tag :alerts do %>
  <% flash.to_h.each do |msg_type, text| %>
    <div class="alerts-container" style="pointer-events: none;">
      <div class="d-flex justify-content-center px-2">
        <div
          data-controller="notification"
          data-notification-delay-value="5000"
          data-transition-enter-from="opacity-0 translate-x-6"
          data-transition-enter-to="opacity-100 translate-x-0"
          data-transition-leave-from="opacity-100 translate-x-0"
          data-transition-leave-to="opacity-0 translate-x-6"

          class="transition transform duration-200 hidden alert d-flex align-items-center <%= admin_flash_class_for(msg_type) %> align-items-center" style="min-width: 300px; pointer-events: all;">
          <div class="d-flex align-items-center justify-content-between w-100">
            <div class="d-flex align-items-center justify-content-between">
              <span><%= text %></span>
            </div>
            <div class="ml-3">
              <button type="button" class="btn" data-action="notification#hide" aria-label="<%= Spree.t(:close) %>">
                <%= icon('x', height: 20, class: 'mr-0') %>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% flash.clear if request.xhr? %>
<% end %>
